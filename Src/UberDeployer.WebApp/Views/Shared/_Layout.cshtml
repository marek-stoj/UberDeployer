@using System.Web.Compilation
@using UberDeployer.WebApp.Core.Models
@model BaseViewModel
<!DOCTYPE html>
<html>
  <head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Static/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Static/bootstrap/css/font-awesome.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Static/bootstrap/css/simple-sidebar.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Static/site.css?t=382743")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="@Url.Content("~/Static/jquery.js")"> </script>
    <script type="text/javascript" src="@Url.Content("~/Static/plugins/jquery.debounce.js")"> </script>

    <script type="text/javascript" src="@Url.Content("~/Static/bootstrap/js/bootstrap.js")"> </script>

    <script type="text/javascript" src="@Url.Content("~/Static/site.js?t=857337")"> </script>
    <script type="text/javascript" src="@Url.Content("~/Static/jquery.signalr.js")"> </script>
    <script src="signalr/hubs" type="text/javascript"> </script>

    @* ReSharper disable PossibleNullReferenceException *@

    <script type="text/javascript">
      setAppPrefix('@(Request.ApplicationPath.EndsWith("/") ? Request.ApplicationPath : Request.ApplicationPath + "/")');
    </script>

    @* ReSharper restore PossibleNullReferenceException *@
  </head>
  <body>
    <div id="wrapper">
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav sidebar-nav-indented">
          <li class="sidebar-brand"><a href="#">UberDeployer</a></li>
          <li class="@(Model.CurrentAppPage == AppPage.Deployment ? "active" : "")">
            <a href="@Url.Action("Index", "Deployment")">Deployment</a>
          </li>
          <li class="@(Model.CurrentAppPage == AppPage.History ? "active" : "")">
            <a href="@Url.Action("Index", "History")">History</a>
          </li>
          <li>
            <span>Username: @Model.Username</span>
          </li>
          <li>
            <span>Version @(BuildManager.GetGlobalAsaxType().BaseType.Assembly.GetName().Version)</span>
          </li>
        </ul>
        <div id="sidebar-footer">
          <ul class="sidebar-nav sidebar-nav-centered">
            <li>
              <a href="https://github.com/marek-stoj/UberDeployer" class="github"><i class="fa fa-github fa-2x"></i></a>
            </li>
            <li>
              <a href="#" class="kickass"><i class="fa fa-rocket fa-2x"></i></a>
            </li>
          </ul>
        </div>
      </div>
      <div id="page-content-wrapper">
        <div class="page-content inset">
          @RenderBody()
        </div>
      </div>
    </div>
  </body>
</html>