@using UberDeployer.WebApp.Core.Models.History
@model IndexViewModel
@{
  ViewBag.Title = "History | ÜberDeployer";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
  <h1>
    History
  </h1>

  <hr />
  
  <table id="tbl-history" cellpadding="0" cellspacing="0" border="0">
    <thead>
      <th>Date</th>
      <th>Time</th>
      <th>Requester</th>
      <th>Project</th>
      <th>Configuration</th>
      <th>Environment</th>
      <th>Successful</th>
    </thead>
    <tbody>
      @foreach (DeploymentRequestViewModel request in Model.DeploymentRequests)
      {
        <tr>
          <td>
            @request.DateFinished.ToShortDateString()
          </td>
          <td>
            @request.DateFinished.ToShortTimeString()
          </td>
          <td>
            @request.RequesterIdentity
          </td>
          <td>
            @request.ProjectName
          </td>
          <td>
            @request.ProjectConfigurationName
          </td>
          <td>
            @request.TargetEnvironmentName
          </td>
          <td>
            @(request.FinishedSuccessfully ? "Yes" : "No")
          </td>
        </tr>
      }
    </tbody>
  </table>
  
  <script type="text/javascript">
    $(document).ready(function() {
      alternateTableRows('tbl-history');
    });
  </script>

</div>
